---
import Navbar from "@/components/navbar/Navbar.astro";
import "../styles/global.css";

const { title, description, keywords } = Astro.props;

const defaultTitle = "Youssef Khaled";
const defaultDescription =
  "A frontend developer with a passion for building user friendly and efficient web applications.";
const defaultKeywords =
  "youssef khaled, frontend developer, portfolio, giza, egypt, frontline, defendops, upperleap, astro, react, next.js, typescript, tailwind";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="keywords"
      content={defaultKeywords + (keywords ? `, ${keywords}` : "")}
    />
    <meta name="description" content={description || defaultDescription} />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <link rel="preconnect" href="https://use.typekit.net" />
    <link rel="preload" href="https://use.typekit.net/hni5mig.css" as="style" />
    <link rel="stylesheet" href="https://use.typekit.net/hni5mig.css" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="generator" content={Astro.generator} />
    <title>{title || defaultTitle}</title>
  </head>
  <body>
    <main class="max-w-2xl mx-auto px-4">
      <Navbar />
      <slot />
    </main>
  </body>
</html>
