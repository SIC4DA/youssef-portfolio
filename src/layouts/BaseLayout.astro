---
import Navbar from "@/components/navbar/Navbar.astro";
import "../styles/global.css";

const { title, description } = Astro.props;

const defaultTitle = "Youssef Khaled";
const defaultDescription =
  "A frontend developer with a passion for building user friendly and efficient web applications.";
const canonicalUrl = new URL(Astro.url.pathname, Astro.site).toString();
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Meta -->
    <title>{title || defaultTitle}</title>
    <meta name="description" content={description || defaultDescription} />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://use.typekit.net" crossorigin />
    <link rel="preconnect" href="https://p.typekit.net" crossorigin />
    <link rel="preload" href="https://use.typekit.net/hni5mig.css" as="style" />
    <link
      rel="stylesheet"
      href="https://use.typekit.net/hni5mig.css"
      media="print"
      onload="this.media='all'"
    />
    <noscript>
      <link rel="stylesheet" href="https://use.typekit.net/hni5mig.css" />
    </noscript>
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="generator" content={Astro.generator} />

    <!-- Canonical -->
    <link rel="canonical" href={canonicalUrl} />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:title" content={title || defaultTitle} />
    <meta
      property="og:description"
      content={description || defaultDescription}
    />
    <meta property="og:image" content="/og-image.png" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title || defaultTitle} />
    <meta
      name="twitter:description"
      content={description || defaultDescription}
    />
    <meta name="twitter:image" content="/og-image.png" />
  </head>
  <body>
    <main class="max-w-2xl mx-auto px-4">
      <Navbar />
      <slot />
    </main>
  </body>
</html>
